<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <property name="connection.username">admin</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">1</property>

        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:vrcmain;MVCC=TRUE</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <property name="show_sql">false</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="hibernate.hbm2ddl.import_files">mock_data.sql</property>

        <mapping class="ca.sfu.cmpt373.alpha.vrcladder.users.User"/>
        <mapping class="ca.sfu.cmpt373.alpha.vrcladder.teams.Team"/>
        <mapping class="ca.sfu.cmpt373.alpha.vrcladder.teams.attendance.AttendanceCard"/>
        <mapping class="ca.sfu.cmpt373.alpha.vrcladder.matchmaking.MatchGroup"/>

    </session-factory>

</hibernate-configuration>